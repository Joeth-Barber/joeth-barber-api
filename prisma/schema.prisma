generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Customer {
  id            Int       @id @default(autoincrement())
  full_name     String
  email         String    @unique
  phone_number  String
  password      String

  @@map("customers")
}
